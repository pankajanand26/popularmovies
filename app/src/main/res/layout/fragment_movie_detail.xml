<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.android.popularmovies.MovieDetailFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/movie_poster"
         />

    <TextView android:id="@+id/movie_detail"
        android:text="@string/hello_world"
        android:layout_below="@id/movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold|italic"
        android:textSize="19sp"
        />

    <TextView android:id="@+id/movie_rating"
        android:text="@string/hello_world"
        android:layout_toRightOf="@id/movie_detail"
        android:layout_below="@id/movie_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="18sp"
        android:gravity="right"
        />

    <TextView android:id="@+id/movie_release"
        android:text="@string/hello_world"
        android:layout_below="@id/movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="18sp"
        android:gravity="left"
        />

    <TextView android:id="@+id/movie_overview"
        android:text="@string/hello_world"
        android:layout_below="@id/movie_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        />

</RelativeLayout>
